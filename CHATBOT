messages = [{"role": "system", "content": "You are a financial expert specializing in real estate investment and negotiation"}]

def CustomChatbot(user_input):
    messages.append({"role": "user", "content": user_input})

    # Placeholder response until Gemini AI integration is available
    response = "Gemini AI integration is coming soon. Stay tuned!"

    messages.append({"role": "assistant", "content": response})
    return response

demo = gradio.Interface(fn=CustomChatbot, inputs="text", outputs="text", title="Real Estate Pro")

demo.launch(share=True)
